@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="panel-card" style="border-color: #5a2323;"> <div class="panel-header">
        <h1 class="panel-title text-danger"><span style="opacity:0.7; margin-right:10px;">❌</span> Excluir Conta</h1>
        <p class="panel-subtitle">Ação irreversível. O usuário será removido do AD.</p>
    </div>

    <div class="panel-body">
        @if (ViewBag.MensagemErro != null)
        {
             <div class="alert alert-danger small py-2 mb-4 border-0 rounded-1">@ViewBag.MensagemErro</div>
        }
        @if (ViewBag.MensagemSucesso != null)
        {
             <div class="alert alert-success small py-2 mb-4 border-0 rounded-1">@ViewBag.MensagemSucesso</div>
        }

        <form asp-action="Excluir" method="post">
            <div class="mb-4">
                <label class="form-label text-danger">Login do Usuário a Excluir</label>
                <input type="text" name="Login" class="form-control" required style="border-color: #5a2323;" />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger fw-bold">CONFIRMAR EXCLUSÃO</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary border-0" style="color: #aaa;">Cancelar</a>
            </div>
        </form>
    </div>
</div>