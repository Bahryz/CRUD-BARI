@{
    ViewData["Title"] = "Adicionar ao Grupo";
}

<div class="panel-card">
    <div class="panel-header">
        <h1 class="panel-title"><span style="opacity:0.7; margin-right:10px;">➕</span> Adicionar Membro</h1>
        <p class="panel-subtitle">Vincular usuário a um grupo</p>
    </div>

    <div class="panel-body">
        @if (ViewBag.MensagemErro != null)
        {
             <div class="alert alert-danger small py-2 mb-4 border-0 rounded-1">@ViewBag.MensagemErro</div>
        }
        @if (ViewBag.MensagemSucesso != null)
        {
             <div class="alert alert-success small py-2 mb-4 border-0 rounded-1">@ViewBag.MensagemSucesso</div>
        }

        <form asp-action="AdicionarGrupo" method="post">
            <div class="mb-3">
                <label class="form-label">Login do Usuário</label>
                <input type="text" name="Login" class="form-control" required />
            </div>
            
            <div class="mb-4">
                <label class="form-label">Nome do Grupo</label>
                <input type="text" name="Grupo" class="form-control" required />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">VINCULAR</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary border-0" style="color: #aaa;">Voltar ao Menu</a>
            </div>
        </form>
    </div>
</div>