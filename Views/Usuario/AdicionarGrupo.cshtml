@model UserViewModel
<h2>Adicionar Usuário ao Grupo</h2>
<form asp-action="AdicionarGrupo" method="post">
    <label>Domínio:</label>
    <input type="text" name="Dominio" required /><br>
    <label>Login do Usuário:</label>
    <input type="text" name="Login" required /><br>
    <label>Grupo:</label>
