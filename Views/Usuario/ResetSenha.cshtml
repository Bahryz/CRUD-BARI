@model UserViewModel
@{
    ViewData["Title"] = "Resetar Senha";
}

<h2 class="mb-4 text-center fw-bold">Resetar Senha</h2>
<p class="sub-title mb-4 text-center">Insira o login e a nova senha.</p>

@if (ViewBag.MensagemSucesso != null)
{
    <div class="alert alert-success">@ViewBag.MensagemSucesso</div>
}
@if (ViewBag.MensagemErro != null)
{
    <div class="alert alert-danger">@ViewBag.MensagemErro</div>
}

<form asp-action="ResetSenha" method="post">
    <div class="mb-3">
        <label asp-for="Login" class="form-label"></label>
        <input asp-for="Login" class="form-control" placeholder="@Model.Dominio\" />
        </div>
    <div class="mb-3">
        <label asp-for="NovoSenha" class="form-label"></label>
        <input asp-for="NovoSenha" class="form-control" type="password" />
        </div>

    <div class="d-grid gap-2 mt-4">
        <button type="submit" class="btn btn-primary btn-lg"><span>ðŸ”‘</span> Resetar</button>
        <a href="/" class="btn btn-outline-secondary mt-2">Voltar ao Menu</a>
    </div>
</form>