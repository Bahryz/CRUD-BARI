@model UserViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Criar Usuário AD - Gerenciador AD</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body style="background:#f4f7fa;">
    <nav class="navbar navbar-light bg-white shadow-sm mb-5">
        <div class="container justify-content-center">
            <a href="/" class="btn btn-outline-primary me-3">&larr; Menu Principal</a>
            <span class="navbar-brand fw-bold fs-4 text-primary">Gerenciador de Usuários AD</span>
        </div>
    </nav>
    <main class="container-main d-flex flex-column align-items-center">
        <div class="card shadow-sm mx-auto w-100" style="max-width:480px;">
            <div class="card-body px-4">
                <h2 class="mb-4 text-center fw-bold">Criar Usuário AD</h2>
                @if (ViewBag.MensagemSucesso != null) {
                    <div class="alert alert-success">@ViewBag.MensagemSucesso</div>
                }
                @if (ViewBag.MensagemErro != null) {
                    <div class="alert alert-danger">@ViewBag.MensagemErro</div>
                }
                <form asp-action="Criar" method="post">
                    <div class="mb-3">
                        <label class="form-label">Domínio:</label>
                        <input type="text" name="Dominio" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Login:</label>
                        <input type="text" name="Login" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Senha:</label>
                        <input type="password" name="Senha" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Grupo (Opcional):</label>
                        <input type="text" name="Grupo" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Criar Usuário</button>
                </form>
            </div>
        </div>
    </main>
</body>
</html>
