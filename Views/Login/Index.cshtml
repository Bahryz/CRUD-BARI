@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - BARI AD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> 
    
    <style>
        /* --- PALETA BARI (Dark Mode) --- */
        body { 
            background-color: #121212; /* Fundo Preto Profundo */
            color: #e0e0e0; 
            height: 100vh; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            position: relative; /* Importante para o posicionamento absoluto funcionar */
        }

        /* --- HEADER DE CANTO (NOVO) --- */
        .system-badge {
            position: absolute;
            top: 25px;
            right: 40px;
            color: rgba(255, 255, 255, 0.6); /* Branco com transparência elegante */
            font-size: 0.8rem;
            font-weight: 600;
            letter-spacing: 2px; /* Espaçamento para ar "Premium" */
            text-transform: uppercase;
            border-left: 3px solid #003366; /* Detalhe BARI sutil */
            padding-left: 15px;
        }
        
        .card-login { 
            background-color: #1e1e1e; 
            border: 1px solid #333; 
            border-radius: 8px; 
            padding: 40px; 
            width: 100%; 
            max-width: 400px; 
            box-shadow: 0 10px 30px rgba(0,0,0,0.5); 
            border-top: 4px solid #003366; 
        }

        .bari-logo { 
            max-width: 200px; 
            width: 100%;      
            height: auto;
            display: block; 
            margin: 0 auto 15px auto;
        }

        .form-control {
            background-color: #2d2d2d;
            border: 1px solid #444;
            color: #fff; 
            padding: 12px; 
        }
        
        .form-control:focus {
            background-color: #333;
            color: #fff;
            border-color: #004a99; 
            box-shadow: 0 0 0 0.25rem rgba(0, 74, 153, 0.25);
        }
        
        .form-label {
            color: #cccccc;
            font-weight: 600;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-login { 
            background-color: #003366; 
            border-color: #003366;
            color: white; 
            font-weight: 700; 
            padding: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        
        .btn-login:hover { 
            background-color: #002244; 
            border-color: #002244;
            transform: translateY(-2px);
        }

        .footer-text {
            color: #ffffff !important;
            opacity: 0.6;
            font-size: 0.75rem;
        }
    </style>
</head>
<body>

    <div class="system-badge">
        Gestão de Acessos AD
    </div>

    <div class="card-login">
        <div class="text-center mb-4">
             <img src="~/img/logo-bari.png" alt="Banco Bari" class="bari-logo" onerror="this.style.display='none'" />
             <h4 style="color: white; font-weight: 300; margin-top: 10px;">Bem-vindo</h4>
             </div>
        
        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger text-center py-2 bg-danger text-white border-0 mb-4" role="alert">
                <small>@ViewBag.Erro</small>
            </div>
        }

        <form action="/Login/Entrar" method="post">
            <div class="mb-3">
                <label class="form-label">Usuário</label>
                <input type="text" name="usuario" class="form-control" required />
            </div>
            <div class="mb-4">
                <label class="form-label">Senha</label>
                <input type="password" name="senha" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-login w-100">ACESSAR</button>
        </form>
        
        <div class="text-center mt-4">
            <small class="footer-text">&copy; 2025 Banco Bari - Tecnologia</small>
        </div>
    </div>
</body>
</html>